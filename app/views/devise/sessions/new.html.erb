<section class="sect">
  <div class="container">
    <div class="row">
    
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
       
          <div class="card-body">
          
            <h5 class="card-title text-center">Sign In</h5>
            
            
             <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="field form-label-group">
                <%# <input type="email" id="inputEmail" class="form-control" placeholder="Email address" required autofocus> %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control",id:"inputEmail", placeholder:"Eml" %>
                <%# <label for="inputEmail">Email</label> %>
                <%= f.label :email, for:"inputEmail" %>
              </div>

              <div class="field form-label-group">
                <%# <input type="password" id="inputPassword" class="form-control" placeholder="Password" required> %>
                <%= f.password_field :password, autocomplete: "current-password", placeholder:"Password", class:"form-control", id:"inputPassword" %>
                <%# <label for="inputPassword">Password</label> %>
                <%= f.label :password, for:"inputPassword" %>
              </div>

              <%# <div class="custom-control custom-checkbox mb-3"> %>
                <%# <input type="checkbox" class="custom-control-input" id="customCheck1"> %>
                <%# <label class="custom-control-label" for="customCheck1">Remember password</label> %>
                <% if devise_mapping.rememberable? %>
                  <div class="field custom-control custom-checkbox mb-3">
                    <%= f.check_box :remember_me, class:"custom-control-input", id:"customCheck1" %>
                    <%= f.label :remember_me, class:"custom-control-label", for:"customCheck1" %>
                  </div>
                <% end %>
              <%# </div> %>
              <%# <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Sign in</button> %>
              <div class="actions">
                <%= f.submit "Log in", class:"btn btn-lg btn-primary btn-block text-uppercase" %>
              </div>
              <% end %>
             <p class="hr my-4">OR </p>
