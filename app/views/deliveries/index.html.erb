<h1>Livraison</h1>
<br>


<div class="container">
  <div class="row">
    <div class="col">
      <table>
        <thead>
          <tr>
            <th>Transit</th>
            <th>Price</th>
            <th>Mode</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @deliveries.each do |delivery| %>
            <% if delivery.mode == "Rapide"%>
              <tr>
                <td>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
                    <label class="form-check-label" for="exampleRadios1">
                      <%= delivery.id%>
                    </label>
                  </div>
                </td>
                <td><%= delivery.transit %></td>
                <td><%= delivery.price %></td>
                <td><%= delivery.mode %></td>
                <td><%= link_to 'Show', delivery %></td>
                <td><%= link_to 'Edit', edit_delivery_path(delivery) %></td>
                <td><%= link_to 'Destroy', delivery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <%end%>
          <% end %>
        </tbody>
      </table>
    </div>
  

    <div class="col">
      <table>
        <thead>
          <tr>
            <th>Transit</th>
            <th>Price</th>
            <th>Mode</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @deliveries.each do |delivery| %>
            <% if delivery.mode == "Normal"%>
              <tr>
                <td>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
                    <label class="form-check-label" for="exampleRadios1">
                    <%= delivery.id%>
                    </label>
                  </div>
                </td>
                <td><%= delivery.transit %></td>
                <td><%= delivery.price %></td>
                <td><%= delivery.mode %></td>
                <td><%= link_to 'Show', delivery %></td>
                <td><%= link_to 'Edit', edit_delivery_path(delivery) %></td>
                <td><%= link_to 'Destroy', delivery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%= link_to 'New Delivery', new_delivery_path %>

